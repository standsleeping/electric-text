{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "No prompt",
      "type": "debugpy",
      "request": "launch",
      "module": "electric_text",
      "args": [
        "Write a haiku about the way rain smells when the weather starts to warm up in the American Midwest.",
        "-m",
        "31",
        // "--model",
        // "ollama:llama3.1:8b"
        // "--log-level",
        // "DEBUG",
      ],
      "env": {
        "OLLAMA_PROVIDER_NAME_SHORTHAND": "lma",
        "OLLAMA_MODEL_SHORTHAND_SMALL":"llama3.1:8b++31"
      }
    },
    {
      "name": "Structured Schema Generation",
      "type": "debugpy",
      "request": "launch",
      "module": "electric_text",
      "args": [
        "The car weighs 5,000 pounds, costs $25,000, and has a range of 400 miles.",
        "-m",
        "31",
        "--prompt-name",
        "prose_to_schema"
      ],
      "env": {
        "OLLAMA_PROVIDER_NAME_SHORTHAND": "lma",
        "OLLAMA_MODEL_SHORTHAND_SMALL":"llama3.1:8b++31",
        "USER_PROMPT_DIRECTORY": "${workspaceFolder}/examples/prompt_configs"
      }
    },
    {
      "name": "Streaming Structured Schema",
      "type": "debugpy",
      "request": "launch",
      "module": "electric_text",
      "args": [
        "The car weighs 5,000 pounds, costs $25,000, and has a range of 400 miles.",
        "-m",
        "31",
        "--prompt-name",
        "prose_to_schema",
        "--stream"
      ],
      "env": {
        "OLLAMA_PROVIDER_NAME_SHORTHAND": "lma",
        "OLLAMA_MODEL_SHORTHAND_SMALL":"llama3.1:8b++31",
        "USER_PROMPT_DIRECTORY": "${workspaceFolder}/examples/prompt_configs"
      }
    },
    {
      "name": "Poetry Generation",
      "type": "debugpy",
      "request": "launch",
      "module": "electric_text",
      "args": [
        "Write a haiku about the way rain smells when the weather starts to warm up in the American Midwest.",
        "-m",
        "31",
        "--prompt-name",
        "poetry"
      ],
      "env": {
        "OLLAMA_PROVIDER_NAME_SHORTHAND": "lma",
        "OLLAMA_MODEL_SHORTHAND_SMALL":"llama3.1:8b++31",
        "USER_PROMPT_DIRECTORY": "${workspaceFolder}/examples/prompt_configs"
      }
    },
    {
      "name": "Streaming Poetry",
      "type": "debugpy",
      "request": "launch",
      "module": "electric_text",
      "args": [
        "Write a haiku about the way rain smells when the weather starts to warm up in the American Midwest.",
        "-m",
        "31",
        "--prompt-name",
        "poetry",
        "--stream"
      ],
      "env": {
        "OLLAMA_PROVIDER_NAME_SHORTHAND": "lma",
        "OLLAMA_MODEL_SHORTHAND_SMALL":"llama3.1:8b++31",
        "USER_PROMPT_DIRECTORY": "${workspaceFolder}/examples/prompt_configs"
      }
    },
    {
      "name": "Debug web server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "electric_text.web.server:app",
        "--reload",
      ],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "LOG_LEVEL": "DEBUG"
      },
      "python": "${workspaceFolder}/.venv/bin/python"
    }
  ]
}
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Module",
      "type": "debugpy",
      "request": "launch",
      "module": "electric_text",
      "args": [
        "Write a haiku about the way rain smells when the weather starts to warm up in the American Midwest.",
        "--log-level",
        "DEBUG",
        "--model",
        "ollama:llama3.1:8b"
      ]
    },
    {
      "name": "Debug web server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "electric_text.web.server:app",
        "--reload",
      ],
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}",
        "LOG_LEVEL": "DEBUG"
      },
      "python": "${workspaceFolder}/.venv/bin/python"
    }
  ]
}